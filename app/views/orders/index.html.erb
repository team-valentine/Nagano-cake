<div class="container">

	<div class="row">

		<h3 style="margin-bottom: 30px">注文履歴一覧</h3>
		<table class="table table-bordered ">
			<thead>
				<tr class="active">
					<th class="col-sm-2">注文日</th>
					<th class="col-sm-4">配送先</th>
					<th class="col-sm-2">注文商品</th>
					<th class="col-sm-1">支払金額</th>
					<th class="col-sm-1">ステータス</th>
					<th class="col-sm-2">注文詳細</th>
				</tr>
			</thead>

		<% @orders.each do |order| %>
			<tbody>

				<tr>
					<td style="vertical-align: middle;"><%= order.created_at.strftime('%Y/%m/%d') %></td>
					<td style="vertical-align: middle;"><%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
					<td style="vertical-align: middle;">
						<% order.order_items.each do |order_item| %>
							<%= order_item.item.name %><br>
						<% end %>
					</td>
					<td style="vertical-align: middle;"><%= order.billing_amount %></td>
					<td style="vertical-align: middle;"><%= order.status %></td>
					<td style="vertical-align: middle; text-align: center;"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
				</tr>
			</tbody>
		<% end %>

		</table>

		<div class="row col-md-offset-5 col-md-2">
		<%= paginate @orders, class: "paginate" %>
		</div>

	</div>

</div>