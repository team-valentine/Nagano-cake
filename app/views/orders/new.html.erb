<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>購入情報入力</h3>
			<%= form_for(@order, url: orders_confirm_path, method: :get) do |f| %>
			<h3>支払方法</h3>
			<label>
				<%= f.radio_button :payment_method, :クレジットカード, required: true %>クレジットカード
			</label><br>

			<label>
				<%= f.radio_button :payment_method, :銀行振込, required: true %>
				銀行振込
			</label>
			<h3>お届け先</h3>

			<label>
				<%= radio_button_tag(:selected_address,'customer', checked: true, required: true )  %>
				ご自身の住所
			</label>
			<br />

			<p>〒<%= @customer.postal_code.to_s.insert(3, "-") %></p><%= @customer.address %><br>
			    <%= @customer.lastname %><%= @customer.firstname %><br>


			<label>
				<%= radio_button_tag(:selected_address,'deliveries', required: true )  %>
				登録先住所から選択
			</label>
			<br>
			<%= f.select :address, Delivery.all.map { |ship| [ship.address] }, class: 'col-xs-8' %><br>



			<label>
				<%= radio_button_tag(:selected_address,'new_deliveries',required: true )  %>
				新しいお届け先
			</label>

			<br/>

			<table class="table">
				<tr>
					<div class="field">
						<th><%= f.label :郵便番号 %></th>
						<td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'col-xs-4' %>ハイフンなし
						</td>
					</div>
				</tr>

				<tr>
					<div class="field">
						<th class="col-xs-3"><%= f.label :住所 %></th>
						<div class="col-xs-9">
							<td><%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'col-xs-8' %></td>
						</div>
					</div>
				</tr>

				<tr>
					<div class="field">
						<th class="col-xs-3 active"><%= f.label :宛名 %></th>
						<div class="col-xs-9">
							<td><%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'col-xs-6' %></td>
						</div>
					</div>
				</tr>


				<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
				<% end %>


			</table>
			<%= f.submit '確認画面へ進む',class: "btn btn-primary" %>

			<% end %>
		</div>
	</div>
</div>


