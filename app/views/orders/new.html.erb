<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>購入情報入力</h3>


			<%= form_for(@order) do |f| %>
			<h3>支払方法</h3>
			<%= f.radio_button :status, :true %>
			<%= f.label :status, "クレジットカード" %><br>
			<%= f.radio_button :status, :false %>
			<%= f.label :status, "銀行振込" %>

			<h3>お届け先</h3>

			<%= f.radio_button :status, :true %>
			<%= f.label :customer_id, "ご自身の住所" %><br>
			<%= @customer.address %><br>

			<%= f.radio_button :status, :false %>
			<%= f.label :customer_id, "登録先住所から選択" %><br>
			<%= f.select :address,@customer.deliveries.all.map { |ship| [ship.address] }, class: 'col-xs-8' %><br>

			<%= f.radio_button :status, :false %>
			<%= f.label :customer_id, "新しいお届け先" %><br>

			<table class="table">
				<tr>
					<div class="field">
						<th><%= f.label :郵便番号 %></th>
						<td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'col-xs-4' %>ハイフンなし
						</td>
					</div>
				</tr>

				<tr>
					<div class="field">
						<th class="col-xs-3"><%= f.label :住所 %></th>
						<div class="col-xs-9">
							<td><%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'col-xs-8' %></td>
						</div>
					</div>
				</tr>

				<tr>
					<div class="field">
						<th class="col-xs-3 active"><%= f.label :宛名 %></th>
						<div class="col-xs-9">
							<td><%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'col-xs-6' %></td>
						</div>
					</div>
				</tr>


				<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
				<% end %>


			</table>
			<%= f.submit '確認画面へ進む',class: "btn btn-primary" %>

			<% end %>
		</div>
	</div>
</div>


