<div class="container">
	<div class="row">

		<div class="col-md-2">
			<%= render 'items/list', genres: @genres %>
		</div>

		<div class="col-md-10">
			<% if params[:genre_id] %>
				<h1 style="display: inline-block;"><%= @genre.name %></h1>
				<h3 style="display: inline-block;">(全<%= @items.count %>件)</h3>
			<% else %>
				<h1 style="display: inline-block;">全ての商品</h1>
				<h3 style="display: inline-block;">(全<%= @items.count %>件)</h3>
			<% end %>
		</div>

		<div class="col-md-10">
			<% @items.each do |item| %>

				<div class="item col-md-3" style="margin-bottom: 20px;">
					<%= link_to item_path(item) do %>
						<%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "no_image.png", size: "200x150" %><br>
					<% end %>
					<div style="margin-top: 10px;">
						<b><%= item.name %><br>
						¥<%= item.tax_excluded_price %></b>
					</div>
				</div>

			<% end %>
		</div>

			<div class="page col-md-12">
			<%= paginate @items, class: "paginate" %>
			</div>
	</div>
</div>
