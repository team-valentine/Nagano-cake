<div class="container">
	<div class="row">
		<div style="height: 450px; margin-bottom: 30px; position: relative">
		    <div class="theTarget" style="border-radius: 15px;">
				<div style="background-image:url(<%= asset_path "shop.jpg" %>); background-position:50% 38%; background-size:cover; %;"></div>
				<div style="background-image:url(<%= asset_path "cake3.jpg" %>)"></div>
				<div style="background-image:url(<%= asset_path "cake1.jpg" %>)"></div>
				<div style="background-image:url(<%= asset_path "pudding2.jpg" %>)"></div>
				<div style="background-image:url(<%= asset_path "cookie.jpg" %>)"></div>
		    </div>
		    <h1 class="skippr-cover">Welcome to Nagano Cake</h1>

		</div>

		<div class="row" style="text-align: center; margin-bottom: 30px;">
		  	<div style="position: relative;" class="col-md-4">
				<%= link_to image_tag("cake2.jpg", size: '350x200', alt: "ケーキ画像", style: 'border-radius: 10px;'), items_path, style: 'width: 100%;' %>
				<h3 class="top-image">商品一覧へ</h3>
	        </div>

			<div style="position: relative;" class="col-md-4">

				<%= link_to image_tag("back-cake.jpg", size: '350x200', alt: "ケーキ画像", style: 'border-radius: 10px;'), items_path(genre_id: 1), style: 'margin-right: 10px; width: 100%;' %>

				<h3 class="top-image"><b>ケーキ</b></h3>
			</div>

			<div style="position: relative;" class="col-md-4">

				<%= link_to image_tag("baked-cake.jpg", size: '350x200', alt: "ケーキ画像", style: 'border-radius: 10px;'), items_path(genre_id: 2), style: 'margin-right: 10px; width: 100%;' %>

				<h3 class="top-image">焼き菓子</h3>
			</div>

		</div>
		<div class="row" style="text-align: center;">

			<div style="position: relative;" class="col-md-4">

				<%= link_to image_tag("pudding.jpg", size: '350x200', alt: "ケーキ画像", style: 'border-radius: 10px;'), items_path(genre_id: 3), style: 'margin-right: 10px; width: 100%;' %>

				<h3 class="top-image">プリン</h3>
			</div>

			<div style="position: relative;" class="col-md-4">

				<%= link_to image_tag("candy.jpg", size: '350x200', alt: "ケーキ画像", style: 'border-radius: 10px;'), items_path(genre_id: 4), style: 'margin-right: 10px; width: 100%;' %>
				<h3 class="top-image">キャンディ</h3>
			</div>

			<div style="position: relative;" class="col-md-4">
				<%= link_to image_tag("macaron.jpg", size: '350x200', alt: "ケーキ画像", style: 'border-radius: 10px;'), items_path(genre_id: 5), style: 'margin-right: 10px; width: 100%;' %>
				<h3 class="top-image">マカロン</h3>
			</div>
		</div>
	</div>
</div>



<% body = capture do %>
	<span class="glyphicon glyphicon-cog pull-right" aria-hidden="true"></span>
<% end %>
<%= link_to body, admins_top_path  %>
<script>
//Skipprの初期化
$("document").ready(function() {
    $(".theTarget").skippr();
});

// オプションを指定してSkipprの実行
$(".theTarget").skippr({
    // スライドショーの変化（"fade" or "slide"）
    transition : 'fade',
    // 変化にかかる時間（ミリ秒）
    speed : 1000,
    // easingの種類
    easing : 'easeOutQuart',
    // ナビゲーションの形（"block" or "bubble"）
    navType : 'block',
    // 子要素の種類（"div" or "img"）
    childrenElementType : 'div',
    // ナビゲーション矢印の表示（trueで表示）
    arrows : true,
    // スライドショーの自動再生（falseで自動再生なし）
    autoPlay : true,
    // 自動再生時のスライド切替間隔（ミリ秒）
    autoPlayDuration : 4000,
    // キーボードの矢印キーによるスライド送りの設定（trueで有効）
    keyboardOnAlways : true,
    // 1枚目のスライド表示時に戻る矢印を表示するかどうか（falseで非表示）
    hidePrevious : false
});
</script>
