<div class="jumbotron">
  <div class="container">
      <div class="row">
        <h2 class="col-md-2 col-md-offset-5" style="margin-bottom: 30px">Sign up</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="field">
          <%= f.label :lastname, "Name(姓)", class: 'col-md-3 col-md-offset-3' %>
          <%= f.label :firstname, "Name(名)", class: 'col-md-3', style: "margin-bottom: 10px;" %>
        </div>

        <div class="field">
          <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: 'col-md-2 col-md-offset-3' %>
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: 'col-md-2 col-md-offset-1', style: "margin-bottom: 15px;" %>
        </div>
      </div>

      <div class="row">
        <div class="field">
          <%= f.label :kana_lastname, "カナ(姓)", class: 'col-md-3 col-md-offset-3' %>
          <%= f.label :kana_firstnam, "カナ(名)", class: 'col-md-3', style: "margin-bottom: 10px;" %>
        </div>

        <div class="field">
          <%= f.text_field :kana_lastname, autofocus: true, autocomplete: "kana_lastname", class: 'col-md-2 col-md-offset-3' %>
          <%= f.text_field :kana_firstname, autofocus: true, autocomplete: "kana_firstname", class: 'col-md-2 col-md-offset-1', style: "margin-bottom: 15px;" %>
        </div>
      </div>

    <div class="row">
      <div class="field">
        <%= f.label :postal_code, "郵便番号", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 10px;" %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 15px;" %>
      </div>

      <div class="field">
        <%= f.label :address, "住所", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 10px;" %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 15px;" %>
      </div>

      <div class="field">
        <%= f.label :phone_number, "電話番号", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 10px;" %><br />
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 15px;" %>
      </div>

      <div class="field">
        <%= f.label :email, class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 10px;" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 15px;" %>
      </div>

      <div class="field">
        <div class="col-md-6 col-md-offset-3" style="margin-bottom: 10px;">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 15px;" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 10px;"  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-md-6 col-md-offset-3', style: "margin-bottom: 30px;" %>
      </div>
  <%= f.hidden_field :status,:value => true %>
      <div class="actions">
        <%= f.submit "Sign up", class: 'col-md-2 col-md-offset-5 btn-lg btn-primary', style: "margin-bottom: 10px;" %>
      </div>

    </div>


    <% end %>

  </div>
</div>