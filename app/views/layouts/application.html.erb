<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

     <header class="navbar navbar-default navbar-fixed-top">
          <div class="container">
                <nav class="nav navbar-nav">
                    <h2>ながのCAKE</h2>
                </nav>
                <div class="collapse navbar-collapse" id="Navber">
                   <ul class="nav navbar-nav navbar-right">
                     <% if customer_signed_in? %>
                        <div class="row">
                          <li class="list-item col-md-offset-4 col-md-4">
                            <%= link_to_unless_current "Home", root_path %>
                          </li>
                          <li class="list-item col-md-4">
                            <%= link_to_unless_current "About", about_path  %>
                          </li>
                        </div>
                        <div class="row">
                          <li class="list-item col-md-4">
                            <% body = capture do %>
                                <p><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Cart</p>
                              <% end %>
                              <%= link_to_unless_current body, cart_items_path %>
                          </li>

                          <li class="list-item col-md-4">
                            <%= link_to_unless_current "MyPage", customer_path(current_customer.id) %>
                          </li>

                          <li class="list-item col-md-4">
                            <%= link_to_unless_current "Logout", destroy_customer_session_path, method: :delete %>
                          </li>
                        </div>
                        <div class="row">
                          <p class="col-md-offset-4"><%= current_customer.lastname %>さんがログインしています。</p>
                        </div>

                     <% elsif admin_signed_in? %>

                        <li class="list-item">
                          <%= link_to "商品一覧", admins_items_path %>
                        </li>
                        <li class="list-item">
                         <%= link_to "会員一覧", admins_customers_path %>
                        </li>
                        <li class="list-item">
                          <%= link_to "注文履歴一覧", admins_orders_path %>
                        </li>
                        <li class="list-item">
                          <%= link_to "ジャンル管理", admins_genres_path %>
                        </li>

                     <% else %>

                        <li class="list-item">
                          <%= link_to "Home", root_path %>
                        </li>
                        <li class="list-item">
                         <%= link_to "About", about_path %>
                        </li>
                        <li class="list-item">
                          <%= link_to "Login", new_customer_session_path %>
                        </li>
                        <li class="list-item">
                          <%= link_to "Signup", new_customer_registration_path %>
                        </li>
                       <% end %>
                    </ul>
                  </div>
              </div>
       </header>

    <%= yield %>
  </body>
</html>
