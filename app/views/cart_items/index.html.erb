<div class="container">
	
		<!-- <div class="col-xs-12"> -->
			<h3 style='margin-bottom: 30px'>ショッピングカート
			<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger pull-right" %></h3>

          <div class="row">
			 <table class="table table-bordered ">
				<thead>
						<tr>
						    <th class="col-xs-4 active">商品名</<th>
							<th class="col-xs-1 active">単価(税込)</th>
							<th class="col-xs-1 active">数量</th>
							<th class="col-xs-1 active">小計</th>
							<th class="col-xs-1 active"></th>
						</tr>
				</thead>

				<tbody>
						<% sum = 0%>
						<% @cart_items.each do |cart| %>
						<tr>
							<td><%= attachment_image_tag cart.item, :image, :fill, 50, 50, fallback: "no_image.png", size:'50x50'%><%= cart.item.name %></td>
							<td><%= cart.item.price_with_tax %></td>
							<td>
								<%= form_for(cart, url: cart_item_path(cart.id), method: :patch) do |f| %>
								<%= f.number_field :quantity, class: "number_field", required:true, min:0%>
								<%= f.submit '変更', class:"btn btn-primary" %>
								<% end %>
							</td>
							<td><%= cart.item.price_with_tax * cart.quantity %>
								
							</td>
							<td><%= link_to "削除する", cart_item_path(cart.id), method: :delete, class: "btn btn-danger" %></td>
						</tr>
						<% end %>
				</tbody>
			  </table>

              <table class="table table-bordered ">
              	<tbody>
              		<tr>
              			<td class="active">合計金額</td>
              			<td><%= sum %></td>
              		</tr>
              	</tbody>
              </table>

              <%= form_for(@cart_item, url: new_order_path(@cart_item), method: :post) do |f| %>
			　<%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %>
			　<%= link_to '情報入力に進む', new_order_path, method: :get, class: "btn btn-primary" %>
			　<% end %>
		</div>
	</div>
</div>