<div class="container">
	<h3>配送先編集</h3>

  <div class="row col-md-9">
	<%= form_for(@delivery, url: delivery_path, method: :patch) do |f| %>

	<table class="table table-bordered col-md-6">
	 <tr>
	   <th class="active col-md-3"><h4>郵便番号</h4></th>
	   <td style="vertical-align: middle;"><%= f.text_field :postal_code, class: 'col-md-3' %></td>
	 </tr>
	 <tr>
	   <th class="active col-md-3"><h4>住所</h4></th>
	   <td style="vertical-align: middle;"><%= f.text_field :address, class: 'col-md-12' %></td>
	 </tr>
	 <tr>
	   <th class="active col-md-3"><h4>宛名</h4></th>
	   <td style="vertical-align: middle;"><%= f.text_field :name, class: 'col-md-6' %></td>
	 </tr>
	</table>

	    <%= f.submit '編集する', class: 'btn btn-primary col-md-2' %>

	<% end %>
  </div>
</div>