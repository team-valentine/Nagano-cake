<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<h2>ジャンル追加・一覧画面</h2>
				<%= form_for(@genre, url: admins_genres_path(@genre), method: :post ) do |f| %>
				  <%= f.text_field :name %>
				  <%= f.radio_button  :status, :true  %>
				  <%= f.label :status, "有効" %>
				  <%= f.radio_button  :status, :false, {:checked => true} %>
				  <%= f.label :status, "無効" %>
				  <%= f.submit "追加" %>
				<% end %>
			<p class="text-warning"><%= flash[:genre_success] %><%= flash[:genre_error] %></p>
			<table class="table thead-light">
				<thead>
					<tr>
					  <th class="col-xs-3 active">ジャンル</<th>
					  <th class="col-xs-3 active">状態</th>
					  <th class="col-xs-3 active"></th>
					</tr>
				</thead>
				<tbody>
				  <% @genres.each do |genre| %>
					<tr>
					  <td><%= genre.name %></td>
					  <td>
					  	<% if genre.status == true %>
					  	有効
					  	<% else genre.status == false %>
					  	無効
					  	<% end %>
					  </td>
					  <td><%= link_to '編集する', edit_admins_genre_path(genre), class: "btn btn-primary" %></td>
					</tr>
				  <% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>
