<div class="container">
  <div class="row">
    <h3 class="col-md-3"><b>商品一覧画面</b></h3>
  </div>
  <div class="row">
      <%= link_to new_admins_item_path, class: 'btn btn-default col-md-offset-10 col-md-1' do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      <% end %>
  </div>

    <div class="row col-md-offset-1 col-md-10">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="col-md-1"><%= item.id %></td>
              <td class="col-md-3"><u><%= item.name %></u></td>
              <td class="col-md-1"><%= item.tax_excluded_price %></td>
              <td class="col-md-2"><%= item.genre.name %></td>
              <td class="col-md-1"><%= item.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row col-md-offset-2 col-md-4">
      <%= paginate @items, class: "paginate" %>
    </div>
  </div>
</div>

