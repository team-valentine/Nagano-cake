<div class="container">

    <h3 style="margin-bottom:80px"><b>商品 詳細画面</b></h3>
         <%= form_for(@item, url:admins_item_path, method: :patch) do |f| %>
     <div class="row">

 　　　　<div class="col-md-4">

            <%= attachment_image_tag @item, :image, :fill, 250, 200 %>

            <%= f.attachment_field :image %>
        </div>

       <div class="col-md-5">
           <div class="row", style="margin-bottom:15px">
              <label class="col-sm-3 control-label">商品名</label>
               <%= f.text_field :name,  class: 'col-xs-6'%>
          </div>

          <div class="row", style="margin-bottom:15px">
             <label class="col-sm-3 control-label">商品説明</label>
          　 <%= f.text_area :description, size: "5x7",class: 'col-xs-6'%>
      　　</div>


          <div class="row", style="margin-bottom:15px">
               <label class="col-sm-3 control-label">ジャンル</label>
       　　　　　<%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id]},class: 'col-xs-6' %>
      　　</div>

          <div class="row", style="margin-bottom:15px">
               <label class="col-sm-3 control-label">税抜価格</label>
     　　　　　 <%= f.text_field :tax_excluded_price, class: 'col-xs-6'%>
         </div>

          <div class="row", style="margin-bottom:15px">
  　　　　　　  <label class="col-sm-3 control-label">発売<br>ステータス</label>
      　　　　　<%= f.select :status, Item.statuses.keys, {} ,class: "select-defaultform-control col-xs-6" %>
  　　　　</div>
   　　</div>
 　</div>

         <div class="row col-xs-12 col-xs-offset-10">
          <%= f.submit '変更を保存', class: 'col-xs-2 btn-lg  btn-primary' %>
         </div>

    <% end %>

</div>