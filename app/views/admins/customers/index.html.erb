<div class="container">

	<h2><b>会員一覧画面</b></h2>

	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<table class="table">
				<thead>
					<tr class="table-secondary">
						<th class="col-md-2 active">会員ID</th>
						<th class="col-md-3 active">氏名</th>
						<th class="col-md-4 active">メールアドレス</th>
						<th class="col-md-3 active">ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
					<tr class="line">
						<td class="col-md-2"><%= customer.id %></td>
						<td  class="col-md-3">

							<u><%=link_to admins_customer_path(customer) do %>

								<%= customer.lastname %>
								<%= customer.firstname %></u>
							<% end %>
							</td>
						<td  class="col-md-4"><%= customer.email %></td>
						<td class="col-md-3">
							<% if customer.status == true %>
							有効
							<% elsif customer.status == false %>
							退会済
							<% else %>
							有効
							<% end %>
						</td>
					</tr>
					<% end %>

				</tbody>
			</table>
		</div>
	</div>
	<div class="page">
		<%= paginate @customers, class: "paginate" %>
	</div>

</div>
