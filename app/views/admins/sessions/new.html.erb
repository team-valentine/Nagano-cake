<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <h2>ながのCAKE</h2>
        </nav>
      </div>
    </header>

<div class="container signup">
    <%= form_for(Admin.new, url: admin_session_path) do |f| %>
      <div class="row field">
        <%= f.label :メールアドレス, class: "col-lg-offset-2 col-lg-2"  %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-5" %>
      </div>

      <div class="row field">
        <%= f.label :パスワード, class: "col-lg-offset-2 col-lg-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-5" %>
      </div>


      <div class="row actions">
        <%= f.submit "ログイン", class: "btn btn-primary col-lg-offset-5 col-lg-2" %>
      </div>
    <% end %>
  </div>
  </body>
</html>